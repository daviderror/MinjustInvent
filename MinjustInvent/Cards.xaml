<Window x:Class="MinjustInvent.Cards"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MinjustInvent"
        mc:Ignorable="d"
        Icon="Resources/e893212583c5486fbb041cfe63bed219.png"
        WindowStartupLocation="CenterScreen"
        Title="Пропуски" Height="450" Width="800" MinHeight="400" MinWidth="800">
    <Grid Loaded="cardsGrid_Loaded">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <DataGrid x:Name="cardsGrid" Loaded="cardsGrid_Loaded" AutoGenerateColumns="False">
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Удалить" Click="deleteButton_Click" />
                </ContextMenu>
            </DataGrid.ContextMenu>
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="120"
                    Binding="{Binding Name}"
                    Header="ФИО" />
                <DataGridTextColumn
                    Width="200"
                    Binding="{Binding DepartmentIndex}"
                    Header="Отдел" />
                <DataGridTextColumn
                    Width="200"
                    Binding="{Binding Card}"
                    Header="Номер карты" />
                <DataGridTextColumn
                    Width="120"
                    Binding="{Binding ReceivedSignature}"
                    Header="Подпись(кто получил)" />
                <DataGridTextColumn
                    Width="120"
                    Binding="{Binding IssuedSignature}"
                    Header="Подпись(кто выдавал)" />
            </DataGrid.Columns>
        </DataGrid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="backButton"
                Width="50"
                Height="30"
                Margin="23,10,0,10"
                HorizontalAlignment="Left"
                VerticalAlignment="Stretch"
                Background="LightGreen"
                Foreground="Black"
                Click="Back"
                FontFamily="MS Reference Sans Serif"
                ToolTip="Назад"
                FontSize="18">
                    <Image Source="Resources/back.png" />
                    <Button.Effect>
                        <DropShadowEffect/>
                    </Button.Effect>
                </Button>
                <Button x:Name="printButton"
                Width="50"
                Height="30"
                Margin="50,10,0,10"
                HorizontalAlignment="Left"
                VerticalAlignment="Stretch"
                Background="LightGreen"
                Foreground="Black"
                FontFamily="MS Reference Sans Serif"
                FontSize="18"
                Click="printButton_Click"
                ToolTip="Экспорт в excel">
                    <Image Source="Resources/excel.png" Width="25" />
                    <Button.Effect>
                        <DropShadowEffect/>
                    </Button.Effect>
                </Button>
                <Button x:Name="setFileNameButton"
                Width="50"
                Height="30"
                Margin="20,10,0,10"
                HorizontalAlignment="Left"
                VerticalAlignment="Stretch"
                Background="LightGreen"
                Foreground="Black"
                ToolTip="Путь для сохранения excel-файла"
                FontFamily="MS Reference Sans Serif"
                FontSize="18"
                Click="setFileNameButton_Click">
                    <Image Source="Resources/folder.png"></Image>
                    <Button.Effect>
                        <DropShadowEffect/>
                    </Button.Effect>
                </Button>
                <TextBlock Margin="15,18" FontFamily="MS Reference Sans Serif"
                FontSize="13" x:Name="filePathText"></TextBlock>
            </StackPanel>
            <Button x:Name="updateButton"
            Grid.Column="2"
            Width="50"
            Height="30"
            Margin="9,10,100,10"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Background="LightGreen"
            Foreground="Black"
            ToolTip="Сохранить изменения"
            Click="updateButton_Click"
            FontFamily="MS Reference Sans Serif"
            FontSize="18">
                <Image Source="Resources/save.png"></Image>
                <Button.Effect>
                    <DropShadowEffect/>
                </Button.Effect>
            </Button>
            <Button x:Name="deleteData"
            Grid.Column="2"
            Width="50"
            Height="30"
            Margin="0,10,10,10"
            ToolTip="Удалить"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Background="LightGreen"
            Foreground="Black"
            Click="deleteButton_Click"
            FontFamily="MS Reference Sans Serif"
            FontSize="18" >
                <Image Source="Resources/musor.png"></Image>
                <Button.Effect>
                    <DropShadowEffect/>
                </Button.Effect>
            </Button>
        </Grid>
    </Grid>
</Window>
